header{
    all: unset;
}
.login_box {
    width: 350px;
    height: 65px;
    background-color: white;
    border: 1px solid #555;
    font-size: 20px;
    padding-left: 15px;
}
.login_box::placeholder {
    text-align: left;
    padding-left: 2%;
    font-size: 1em;
    font-weight: 400;
}
#login_ul > li{
    display: inline-block;
    padding: 0 5% 0 5%;
    border-right: 1px solid #555;
}
#outside_login li {
    display: inline-block;
    padding: 0 5% 0 5%;
}
#outside_login li > a > img {
    width: 35px;
}
li > a {
	text-decoration: none;
	color: #555;
	cursor: pointer;
}