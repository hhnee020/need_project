table {
    width: 90%;
}
table,td,tr{
    border: none;
    border-bottom: 1px solid #555;
    padding: 1%;
}
.td_center{
    padding-right: 15%;
}
/* 확인중 */
.tbc{
    width: 46px;
    height: 23px;
    display: inline-block;
    padding: 2px 4px 2px 4px;
    background-color: rgb(236, 236, 236);
    border: 1px solid gray;
}
/* 답변 */
.reply{
    width: 46px;
    height: 23px;
    display: inline-block;
    padding: 2px 4px 2px 4px;
    background-color: #1785f2;
    border: #1785f2;
    color: white;
}
/* 미답변 */
.unreply{
    width: 46px;
    height: 23px;
    display: inline-block;
    padding: 2px 4px 2px 4px;
    background-color: #d9534f;
    border: #d9534f;
    color: white;
}